<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/destination_button"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Set Destination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <EditText
        android:id="@+id/destination_text"
        android:layout_width="276dp"
        android:layout_height="72dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="text"
        android:singleLine="false"
        android:text="Enter destination"
        app:layout_constraintBottom_toTopOf="@+id/destination_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/location_info"
        android:layout_width="139dp"
        android:layout_height="44dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="32dp"
        android:text="Location"
        app:layout_constraintBottom_toTopOf="@+id/destination_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="184dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination_text" />

</androidx.constraintlayout.widget.ConstraintLayout>